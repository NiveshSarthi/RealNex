# SyndiTech Production Environment Configuration
# IMPORTANT: Never commit this file to version control
# Use strong, unique passwords and secrets

# Application
NODE_ENV=production
PORT=3001

# Database (Production PostgreSQL)
DB_HOST=your_production_db_host
DB_PORT=5432
DB_NAME=synditech_prod
DB_USER=synditech_prod_user
DB_PASSWORD=your_strong_production_db_password

# Redis (Production Redis)
REDIS_HOST=your_production_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=your_strong_production_redis_password

# RabbitMQ (Production RabbitMQ)
RABBITMQ_URL=amqp://synditech_prod:your_strong_rabbitmq_password@your_rabbitmq_host:5672/synditech_prod_vhost

# JWT (Generate a strong secret)
JWT_SECRET=your_very_strong_production_jwt_secret_key_minimum_64_characters

# WhatsApp Business API (Production numbers)
WHATSAPP_ACCESS_TOKEN=your_production_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_production_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_production_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_production_webhook_verify_token

# Payment Gateways (Production credentials)
RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_production_razorpay_webhook_secret

PAYU_MERCHANT_KEY=your_production_payu_merchant_key
PAYU_MERCHANT_SALT=your_production_payu_merchant_salt
PAYU_WEBHOOK_SALT=your_production_payu_webhook_salt

CASHFREE_APP_ID=your_production_cashfree_app_id
CASHFREE_SECRET_KEY=your_production_cashfree_secret_key

# Email (Production email service)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_production_sendgrid_api_key
EMAIL_FROM=noreply@synditech.com

# URLs (Production domains)
FRONTEND_URL=https://synditech.com
BACKEND_URL=https://api.synditech.com

# File Upload (Production storage)
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
CLOUD_STORAGE=aws
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=synditech-uploads-prod

# Logging
LOG_LEVEL=warn

# Backup
BACKUP_RETENTION_DAYS=30
BACKUP_BUCKET=synditech-backups-prod
BACKUP_REGION=us-east-1

# Monitoring
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# CDN
CDN_PROVIDER=cloudflare
CDN_URL=https://cdn.synditech.com
CDN_API_TOKEN=your_cloudflare_api_token

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/synditech.crt
SSL_KEY_PATH=/etc/nginx/ssl/synditech.key

# Security
ALLOWED_ORIGINS=https://synditech.com,https://www.synditech.com

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_BACKUP=true
ENABLE_CACHING=true